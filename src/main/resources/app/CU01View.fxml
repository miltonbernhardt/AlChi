<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU01Controller">
   <content>
      <BorderPane>
         <bottom>
            <HBox alignment="CENTER" maxHeight="70.0" spacing="25.0" BorderPane.alignment="CENTER">
               <children>
                  <Button maxHeight="70.0" mnemonicParsing="false" onAction="#btnConfirmar" text="Confirmar">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button cancelButton="true" maxHeight="70.0" mnemonicParsing="false" onAction="#volver" text="Volver">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </HBox>
         </bottom>
         <top>
            <HBox alignment="CENTER_LEFT" maxHeight="70.0" spacing="15.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <Label text="Categoría:" />
                  <ComboBox fx:id="categoria" onAction="#setCategoriaValida">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ComboBox>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="15.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox minWidth="200.0" spacing="15.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Nombre del producto:">
                           <padding>
                              <Insets bottom="-5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="nombre" onKeyPressed="#setNombreValido" VBox.vgrow="SOMETIMES" />
                        <Label text="Descripción:">
                           <padding>
                              <Insets bottom="-5.0" />
                           </padding>
                        </Label>
                        <TextArea fx:id="descripcion" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets right="15.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="TOP_CENTER" spacing="15.0">
                     <children>
                        <Pane minHeight="0.0" minWidth="0.0" VBox.vgrow="SOMETIMES" />
                        <Button mnemonicParsing="false" onAction="#btnAgregarImagen" text="Agregar imágen">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <StackPane maxHeight="300.0" maxWidth="300.0" VBox.vgrow="SOMETIMES">
                           <children>
                              <Rectangle fx:id="rectangulo" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="300.0" stroke="BLACK" strokeType="INSIDE" width="300.0" />
                              <ImageView fx:id="imagen" fitHeight="300.0" pickOnBounds="true" preserveRatio="true">
                                 <viewport>
                                    <Rectangle2D />
                                 </viewport>
                              </ImageView>
                           </children>
                        </StackPane>
                        <Button fx:id="btnQuitarImagen" disable="true" mnemonicParsing="false" onAction="#btnQuitarImagen" text="Quitar imágen">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Pane minHeight="0.0" minWidth="0.0" VBox.vgrow="SOMETIMES" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </center>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
