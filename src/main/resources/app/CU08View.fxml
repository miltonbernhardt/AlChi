<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU08Controller">
   <content>
      <BorderPane prefHeight="850.0">
         <left>
            <VBox spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Categoría:">
                     <padding>
                        <Insets right="-5.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="categorias" focusTraversable="false" minWidth="200.0" onAction="#seleccionarCategoria">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Label text="Nombre:">
                     <padding>
                        <Insets right="-5.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="productos" disable="true" focusTraversable="false" minWidth="200.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Label text="Código de barra:">
                     <padding>
                        <Insets right="-5.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="codigoBarra">
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin></TextField>
                  <Label text="Proveedor:">
                     <padding>
                        <Insets right="-5.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="proveedores" focusTraversable="false" minWidth="200.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Label text="Fecha ingreso después de:">
                     <padding>
                        <Insets right="-5.0" />
                     </padding>
                  </Label>
                  <DatePicker fx:id="fechaIngresoDespues" minWidth="100.0" onKeyPressed="#vaciarFechaDespues" onKeyReleased="#vaciarFechaDespues" onKeyTyped="#vaciarFechaDespues">
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                     <tooltip>
                        <Tooltip autoHide="true" text="Escribir dentro para limpiar la fecha">
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                        </Tooltip>
                     </tooltip>
                  </DatePicker>
                  <Label text="Fecha ingreso antes de:">
                     <padding>
                        <Insets right="-5.0" />
                     </padding>
                  </Label>
                  <DatePicker fx:id="fechaIngresoAntes" minWidth="100.0" onKeyPressed="#vaciarFechaAntes" onKeyReleased="#vaciarFechaAntes" onKeyTyped="#vaciarFechaAntes">
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                     <tooltip>
                        <Tooltip autoHide="true" text="Escribir dentro para limpiar la fecha">
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                        </Tooltip>
                     </tooltip>
                  </DatePicker>
                  <Label text="¿Disponible?">
                     <tooltip>
                        <Tooltip text="Si el producto está disponible significa que se lo puede vender. Si no lo está es que se lo vendió que se lo dió de baja." />
                     </tooltip></Label>
                  <HBox spacing="15.0">
                     <children>
                        <RadioButton fx:id="noImporta" focusTraversable="false" mnemonicParsing="false" selected="true" text="No importa">
                           <toggleGroup>
                              <ToggleGroup fx:id="enVenta" />
                           </toggleGroup>
                           <tooltip>
                              <Tooltip text="No importa si el producto esta disponible o no, no importa si de dió de baja o aún sigue en stock." />
                           </tooltip>
                        </RadioButton>
                        <RadioButton fx:id="siDisponible" focusTraversable="false" mnemonicParsing="false" text="Si" toggleGroup="$enVenta">
                           <tooltip>
                              <Tooltip text="Se indicarán los productos que aún tengan stock." />
                           </tooltip></RadioButton>
                        <RadioButton fx:id="noDisponible" focusTraversable="false" mnemonicParsing="false" text="No" toggleGroup="$enVenta">
                           <tooltip>
                              <Tooltip text="Se mostrarán aquellos productos que no se posean más en stock, ya sea porque se dieron de baja o se vendieron." />
                           </tooltip></RadioButton>
                     </children>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="25.0">
                     <children>
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#btnBuscar" text="Buscar">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button cancelButton="true" focusTraversable="false" mnemonicParsing="false" onAction="#volver" text="Volver">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </HBox>
                  <Pane VBox.vgrow="SOMETIMES" />
                  <HBox alignment="CENTER_RIGHT" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </left>
         <center>
            <TableView fx:id="tabla" focusTraversable="false" onMouseClicked="#seleccionarProducto" BorderPane.alignment="CENTER">
               <columns>
                  <TableColumn fx:id="columnaCategoria" maxWidth="500.0" minWidth="150.0" prefWidth="200.0" text="Categoría" />
                  <TableColumn fx:id="columnaCodigoBarra" maxWidth="200.0" minWidth="130.0" prefWidth="130.0" text="Código de barra" />
                  <TableColumn fx:id="columnaNombre" maxWidth="500.0" minWidth="150.0" prefWidth="250.0" text="Nombre" />
                  <TableColumn fx:id="columnaProveedor" maxWidth="500.0" minWidth="150.0" prefWidth="200.0" text="Proveedor" />
                  <TableColumn fx:id="columnaIngreso" maxWidth="300.0" minWidth="130.0" prefWidth="130.0" text="Fecha ingreso" />
                  <TableColumn fx:id="columnaPrecioCompra" maxWidth="250.0" minWidth="110.0" prefWidth="120.0" text="Precio compra" />
                  <TableColumn fx:id="columnaNoVendido" maxWidth="250.0" minWidth="130.0" prefWidth="130.0" text="Cant. no vendida" />
                  <TableColumn fx:id="columnaVencimiento" maxWidth="300.0" minWidth="130.0" prefWidth="130.0" text="Fecha vencimiento" />
                  <TableColumn fx:id="columnaDisponible" maxWidth="150.0" minWidth="100.0" prefWidth="100.0" text="Disponible" />
               </columns>
               <BorderPane.margin>
                  <Insets left="15.0" />
               </BorderPane.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <tooltip>
                  <Tooltip autoHide="true" text="Doble click para abrir opciones sobre el producto." />
               </tooltip>
            </TableView>
         </center>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
