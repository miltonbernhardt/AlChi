<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU15Controller">
   <content>
      <BorderPane>
         <center>
            <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <TableView fx:id="tabla" focusTraversable="false" minWidth="400.0" onMouseClicked="#seleccionarCategoria" HBox.hgrow="SOMETIMES">
                     <columns>
                        <TableColumn fx:id="columnaCategoria" minWidth="100.0" prefWidth="500.0" text="CATEGORÍA" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
         </center>
         <left>
            <VBox minWidth="300.0" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Nombre de la categoría">
                     <padding>
                        <Insets bottom="-5.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="nombre" disable="true" maxWidth="300.0" onKeyPressed="#setValido" VBox.vgrow="ALWAYS" />
                  <StackPane>
                     <children>
                        <HBox fx:id="botoneraEditar" alignment="CENTER" disable="true" maxHeight="70.0" spacing="25.0" visible="false">
                           <children>
                              <Button maxHeight="70.0" mnemonicParsing="false" onAction="#btnConfirmarEdicion" text="Confirmar edición">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                              <Button maxHeight="70.0" mnemonicParsing="false" onAction="#btnCancelar" text="Cancelar edición">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                           <padding>
                              <Insets top="30.0" />
                           </padding>
                        </HBox>
                        <HBox fx:id="botoneraAnadir" alignment="CENTER" disable="true" maxHeight="70.0" spacing="25.0" visible="false">
                           <children>
                              <Button maxHeight="70.0" mnemonicParsing="false" onAction="#btnConfirmarAdicion" text="Confirmar adición">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                              <Button maxHeight="70.0" mnemonicParsing="false" onAction="#btnCancelar" text="Cancelar adición">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                           <padding>
                              <Insets top="30.0" />
                           </padding>
                        </HBox>
                        <HBox fx:id="botoneraPrincipal" alignment="CENTER" maxHeight="70.0" spacing="25.0">
                           <children>
                              <Button focusTraversable="false" maxHeight="70.0" mnemonicParsing="false" onAction="#btnAnadir" text="Añadir categoría">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                              <Button fx:id="btnEditar" disable="true" focusTraversable="false" maxHeight="70.0" mnemonicParsing="false" onAction="#btnEditar" text="Editar categoría">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                           <padding>
                              <Insets top="30.0" />
                           </padding>
                        </HBox>
                     </children>
                  </StackPane>
                  <HBox alignment="CENTER" maxHeight="70.0" spacing="25.0">
                     <padding>
                        <Insets top="30.0" />
                     </padding>
                     <children>
                        <Button focusTraversable="false" maxHeight="70.0" mnemonicParsing="false" onAction="#volver" text="Volver">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
