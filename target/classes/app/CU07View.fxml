<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU07Controller">
   <content>
      <BorderPane>
         <center>
            <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <TableView fx:id="tabla" minWidth="400.0" HBox.hgrow="SOMETIMES">
                     <columns>
                        <TableColumn prefWidth="75.0" text="PROVEEDOR" />
                        <TableColumn prefWidth="75.0" text="TELÉFONO" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
         </center>
         <left>
            <VBox spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Nombre del proveedor:">
                     <padding>
                        <Insets bottom="-5.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="nombre" maxWidth="300.0" VBox.vgrow="ALWAYS" />
                  <Label text="Teléfono:">
                     <padding>
                        <Insets bottom="-5.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="telefono" maxWidth="300.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER_LEFT" maxHeight="70.0" spacing="25.0">
                     <children>
                        <Button defaultButton="true" disable="true" maxHeight="70.0" mnemonicParsing="false" onAction="#btnAnadir" text="Añadir">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button disable="true" maxHeight="70.0" mnemonicParsing="false" onAction="#btnEditar" text="Editar">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button cancelButton="true" maxHeight="70.0" mnemonicParsing="false" onAction="#btnVolver" text="Volver">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="30.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
