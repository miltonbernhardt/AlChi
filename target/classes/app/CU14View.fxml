<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU14Controller">
   <content>
      <BorderPane>
         <left>
            <VBox spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Fecha venta antes de:" />
                  <DatePicker fx:id="fechaAntes">
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </DatePicker>
                  <Label text="Fecha venta después de:" />
                  <DatePicker fx:id="fechaDespues">
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </DatePicker>
                  <Label text="Precio venta menor a ($):" />
                  <TextField fx:id="precioMenor">
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Precio venta mayor a ($):" />
                  <TextField fx:id="precioMayor">
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox alignment="CENTER" spacing="25.0">
                     <children>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#btnBuscar" text="Buscar">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#btnVolver" text="Volver">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </left>
         <center>
            <TableView fx:id="tabla" BorderPane.alignment="CENTER">
               <columns>
                  <TableColumn maxWidth="500.0" minWidth="75.0" prefWidth="100.0" text="Combo Nº" />
                  <TableColumn maxWidth="500.0" minWidth="100.0" prefWidth="150.0" text="Precio combo" />
                  <TableColumn maxWidth="500.0" minWidth="100.0" prefWidth="150.0" text="Fecha venta" />
                  <TableColumn minWidth="100.0" prefWidth="185.0" text="Producto" />
                  <TableColumn maxWidth="500.0" minWidth="100.0" prefWidth="150.0" text="Paquete" />
                  <TableColumn maxWidth="-1.0" minWidth="150.0" prefWidth="150.0" text="Cantidad" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets left="15.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
