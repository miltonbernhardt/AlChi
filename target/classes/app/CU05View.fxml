<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU05Controller">
   <content>
      <BorderPane>
         <bottom>
            <HBox alignment="CENTER" maxHeight="70.0" spacing="25.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnActualizar" defaultButton="true" disable="true" maxHeight="70.0" mnemonicParsing="false" onAction="#btnActualizar" text="Actualizar">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button cancelButton="true" maxHeight="70.0" mnemonicParsing="false" onAction="#volver" text="Volver">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets top="15.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <HBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox minWidth="200.0" spacing="15.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" maxHeight="70.0" spacing="15.0">
                           <children>
                              <Label text="Categoría:" />
                              <ComboBox fx:id="categoria">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </ComboBox>
                           </children>
                        </HBox>
                        <Label text="Nombre del producto:">
                           <padding>
                              <Insets bottom="-5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="nombre" VBox.vgrow="SOMETIMES" />
                        <Label text="Descripción:">
                           <padding>
                              <Insets bottom="-5.0" />
                           </padding>
                        </Label>
                        <TextArea fx:id="descripcion" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" VBox.vgrow="SOMETIMES" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="TOP_CENTER" spacing="15.0">
                     <children>
                        <Pane minHeight="0.0" minWidth="0.0" VBox.vgrow="SOMETIMES" />
                        <Button fx:id="btnCambiarImagen" mnemonicParsing="false" onAction="#btnCambiarImagen" text="Cambiar imágen">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <StackPane>
                           <children>
                              <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="300.0" stroke="BLACK" strokeType="INSIDE" width="300.0" />
                              <ImageView fx:id="imagen" fitHeight="300.0" pickOnBounds="true" preserveRatio="true">
                                 <viewport>
                                    <Rectangle2D />
                                 </viewport></ImageView>
                           </children>
                        </StackPane>
                        <Button fx:id="btnQuitarImagen" disable="true" mnemonicParsing="false" onAction="#btnQuitarImagen" text="Quitar imágen">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Pane minHeight="0.0" minWidth="0.0" VBox.vgrow="SOMETIMES" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </center>
         <top>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Pane minHeight="0.0" minWidth="0.0" HBox.hgrow="SOMETIMES" />
                  <Pane HBox.hgrow="SOMETIMES" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </HBox>
         </top>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
