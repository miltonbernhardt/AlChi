<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" pickOnBounds="false" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU06Controller">
   <content>
      <BorderPane>
         <center>
            <VBox alignment="CENTER_LEFT" minWidth="800.0" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Productos empaquetados:">
                     <VBox.margin>
                        <Insets bottom="-10.0" />
                     </VBox.margin>
                  </Label>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minHeight="150.0" minWidth="820.0" VBox.vgrow="ALWAYS">
                     <content>
                        <TableView fx:id="tabla1" minHeight="150.0" minWidth="-Infinity" onMouseClicked="#selecionarPaquete1" prefHeight="210.0" prefWidth="820.0">
                           <columns>
                              <TableColumn fx:id="columnaProducto1" editable="false" maxWidth="700.0" minWidth="200.0" prefWidth="200.0" text="Producto" />
                              <TableColumn fx:id="columnaFormaVenta1" editable="false" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="Forma venta" />
                              <TableColumn fx:id="columnaPrecioVenta1" editable="false" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="Precio venta" />
                              <TableColumn fx:id="columnaProveedor1" editable="false" maxWidth="500.0" minWidth="170.0" prefWidth="170.0" text="Proveedor" />
                              <TableColumn fx:id="columnaCodigoBarra1" editable="false" maxWidth="300.0" minWidth="130.0" prefWidth="130.0" text="Código de barra" />
                              <TableColumn fx:id="columnaVencimiento1" editable="false" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="Vencimiento" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </ScrollPane>
                  <HBox alignment="CENTER" spacing="25.0" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="btnAnadirAlCombo" contentDisplay="CENTER" disable="true" minWidth="-Infinity" mnemonicParsing="false" onAction="#btnAnadirAlCombo" text="Añadir al combo">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Pane minWidth="60.0" />
                        <Button contentDisplay="CENTER" minWidth="-Infinity" mnemonicParsing="false" onAction="#btnEmpaquetar" text="Agregar producto empaquetado">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minHeight="150.0" minWidth="820.0" VBox.vgrow="ALWAYS">
                     <content>
                        <TableView fx:id="tabla2" minHeight="150.0" minWidth="-Infinity" onMouseClicked="#selecionarPaquete2" prefHeight="190.0" prefWidth="820.0">
                           <columns>
                              <TableColumn fx:id="columnaProducto2" editable="false" maxWidth="700.0" minWidth="200.0" prefWidth="200.0" text="Producto" />
                              <TableColumn fx:id="columnaFormaVenta2" editable="false" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="Forma venta" />
                              <TableColumn fx:id="columnaPrecioVenta2" editable="false" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="Precio venta" />
                              <TableColumn fx:id="columnaProveedor2" editable="false" maxWidth="500.0" minWidth="170.0" prefWidth="170.0" text="Proveedor" />
                              <TableColumn fx:id="columnaCodigoBarra2" editable="false" maxWidth="300.0" minWidth="130.0" prefWidth="130.0" text="Código de barra" />
                              <TableColumn fx:id="columnaVencimiento2" editable="false" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="Vencimiento" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </ScrollPane>
                  <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="btnEliminarDelCombo" disable="true" minWidth="-Infinity" mnemonicParsing="false" onAction="#btnEliminarProducto" text="Eliminar producto del combo">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children></HBox>
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <Label text="Precio de venta sugerido ($):" />
                        <TextField fx:id="precioVenta" alignment="CENTER" maxHeight="30.0" maxWidth="100.0" minWidth="60.0" prefHeight="30.0" prefWidth="40.0" promptText="0.0">
                           <tooltip>
                              <Tooltip text="El precio sugerido es de acuerdo al precio al que se compró el producto más un porcentaje de ganancia asignado a la modalidad de venta por combo" />
                           </tooltip></TextField>
                        <Pane HBox.hgrow="SOMETIMES" />
                        <Button mnemonicParsing="false" onAction="#btnConfirmarCombo" text="Confirmar combo">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#volver" text="Volver">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets left="15.0" />
               </BorderPane.margin>
            </VBox>
         </center>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
