<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" pickOnBounds="false" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CU06Controller">
   <content>
      <BorderPane>
         <left>
            <VBox spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Categoría:" />
                  <ComboBox minWidth="100.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Label text="Producto:" />
                  <ComboBox minWidth="100.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Label text="Paquete:" />
                  <ComboBox disable="true" minWidth="100.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Label text="Cantidad:" />
                  <ComboBox disable="true" minWidth="100.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="-10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnAnadirAlCombo" text="Añadir al combo">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
                  <Pane VBox.vgrow="SOMETIMES" />
                  <HBox alignment="CENTER" spacing="15.0" />
               </children>
               <padding>
                  <Insets bottom="15.0" />
               </padding>
            </VBox>
         </left>
         <center>
            <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <TableView>
                           <columns>
                              <TableColumn editable="false" minWidth="300.0" prefWidth="-1.0" text="Categoría" />
                              <TableColumn editable="false" minWidth="300.0" prefWidth="-1.0" text="Producto" />
                              <TableColumn editable="false" minWidth="150.0" prefWidth="-1.0" text="Paquete" />
                              <TableColumn editable="false" maxWidth="-1.0" minWidth="150.0" prefWidth="150.0" text="Cantidad" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </ScrollPane>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Precio de venta ($):" />
                        <TextField alignment="CENTER" maxHeight="30.0" maxWidth="100.0" minWidth="60.0" prefHeight="30.0" prefWidth="40.0" promptText="0,00" />
                        <Pane HBox.hgrow="SOMETIMES" />
                        <Button disable="true" mnemonicParsing="false" onAction="#btnEliminarProducto" text="Eliminar producto">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button disable="true" mnemonicParsing="false" onAction="#btnEditarProducto" text="Editar producto">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Pane HBox.hgrow="SOMETIMES" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#btnConfirmarCombo" text="Confirmar combo">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#btnVolver" text="Volver">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets left="15.0" />
               </BorderPane.margin>
            </VBox>
         </center>
      </BorderPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
